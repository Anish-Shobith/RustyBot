<div class="bg-dark px-4 pt-2 pb-4 border border-light text-center">
    <p class="display-4 text-center text-secondary">Settings</p>
    <hr class="bg-secondary px-5 mx-5">

    <form>
        <div class="form-row">
                <% const settings = bot.getSettings(guild.id);
                const defaults = bot.settings.defaultSettings;
                for (const key in settings) { %>


            <div class="form-group col-md-6 text-left">
                    <label for="<%= key %>"><%= key %></label>
                    <input type="text" class="form-control" style="text-align: left;" name="<%= key %>" id="<%= key %>" value="<%= settings[key] %>"
                            placeholder="Enter <%= key %>">
                  </div>

            <% } %>
        </div>

        <div class="mt-4 mb-2">
            <a class="btn btn-outline-danger text-white mx-1" data-toggle="modal" data-target="#settingsResetModal" role="button">Reset Defaults
                <i class="fa fa-fw fa-cogs text-danger" aria-hidden="true"></i>
            </a>
            <button type="submit" class="btn btn-outline-success text-white mx-1">Save Changes
                <i class="fa fa-fw fa-save text-success" aria-hidden="true"></i>
            </button>
        </div>

    </form>

   
</div>